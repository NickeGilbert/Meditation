<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="match_parent"
                android:layout_height="233dp"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:background="@drawable/walking" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:layout_marginLeft="30dp"
                android:fontFamily="@font/timeless"
                android:text="Everyday Mantra"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_gravity="left"/>

            <Button
                android:id="@+id/startMeditation"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Meditation"
                android:background="@drawable/rounded_corners"
                android:textColor="#fff"/>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView7"
                android:layout_marginTop="36dp"
                android:layout_marginLeft="30dp"
                android:fontFamily="@font/timeless"
                android:text="My lessons"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_gravity="left"/>

            <Button
                android:id="@+id/soundButton"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30px"
                android:background="@drawable/round_button"
                android:text="Sound"
                android:textColor="#fff"
                android:layout_gravity="left"/>

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="match_parent"
                android:layout_height="233dp"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:background="@drawable/focus" />

            <Button
                android:id="@+id/subscription_button"
                android:layout_width="250dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="100dp"
                android:text="Subscribe now!"
                android:background="@drawable/subscription_button"
                android:textColor="#fff"/>


        </LinearLayout>
    </ScrollView>


</RelativeLayout>